@model BussinessEntites.NewRequirmentEntites
@{
    ViewBag.Title = "Newreq";
    Layout = "~/Views/Shared/CompanyView.cshtml";
}

<h2>Newreq</h2>

@using (Html.BeginForm("Newreq", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <div class="form-group">
        @Html.LabelFor(c => c.EmployeeId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.EmployeeId, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.CompanyId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.CompanyId, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.jobtype, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.jobtype, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.JobName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.JobName, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <lable class="col-md-2 control-label"> Job description</lable>
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.JobDesc, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <lable class="col-md-2 control-label">Salary</lable>
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.Salary, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <lable class="col-md-2 control-label"> Location</lable>
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.Location, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <lable class="col-md-2 control-label">ApplyDate</lable>
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.PostedDate, new { @class = "form-control",@type="date" })

        </div>
    </div>
    <div class="form-group">
        <lable class="col-md-2 control-label">LastDate</lable>
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.LastDate, new { @class = "form-control", @type = "date" })

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="SUBMIT" />
        </div>
    </div>

}
@ViewData["a"]
