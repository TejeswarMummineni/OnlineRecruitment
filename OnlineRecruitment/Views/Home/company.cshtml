@model BussinessEntites.CompanyPortalEntites
@{
    ViewBag.Title = "company";
}

<h1>Applicant Details Registration Form</h1>


<div>
    <form action="company" method="post" enctype="multipart/form-data">
        <div class="form-group">
            @Html.LabelFor(c => c.CompanyName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(c => c.CompanyName, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.CompanyName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(c => c.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.CompanyDesc, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(c => c.CompanyDesc, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.CompanyDesc)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Location, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(c => c.Location, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Location)
            </div>

        </div>


        <div>
            <label>upload your company LOGO</label>
            <div class="editor-label">
                <input type="file" name="Logo" />
                @*@Html.ValidationSummary("customError")*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="SUBMIT" />
            </div>
        </div>
    </form>
    @ViewData["status"]
</div>

