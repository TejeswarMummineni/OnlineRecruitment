@model BussinessEntites.JobApplicantEntites

@{ ViewBag.Title = "openAcc"; }

<center><a style="color:red">@ViewData["status"]</a></center>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/Content/registration.css" rel="stylesheet" />
<form action="openAcc" method="post" enctype="multipart/form-data">
    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                <h3>Welcome</h3>


                <p class="message">If Already Registered ? Login Here  <a href="https://localhost:44346/Home/Login">Login</a></p>
                @*<input type="submit" name="" value="Login" /><br />*@
            </div>
            <div class="col-md-9 register-right">
                <ul class="nav nav-tabs" id="mytab">
                    <li class="nav-item">
                        <a data-toggle="tab" href="#home" aria-controls="home">click here</a>
                    </li>
                    @*class="nav-link active" id="home-tab"*@
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h2 class="register-heading"> <b>Candidate Registration</b></h2>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label> Name </label>  @Html.TextBoxFor(c => c.Name, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label> Password </label>  @Html.PasswordFor(c => c.Password, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label> Phone </label>   @Html.TextBoxFor(c => c.Phone, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label> Date Of Birth </label>   @Html.TextBoxFor(c => c.Dob, new { @class = "form-control", @type = "date", required = "required" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2", required = "required" })
                                    <div class="col-md-10">
                                        Male
                                        @Html.RadioButtonFor(model => model.Gender, true)<br>
                                        Female
                                        @Html.RadioButtonFor(model => model.Gender, false)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label> Email </label>   @Html.TextBoxFor(c => c.Email, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label> University Name </label>  @Html.TextBoxFor(c => c.UniversityName, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label> Location </label>   @Html.TextBoxFor(c => c.Location, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label> JobType </label>  @Html.TextBoxFor(c => c.JobType, new { @class = "form-control", required = "required" })
                                </div>
                                <div>
                                    <label>upload your resume</label>
                                    <div class="editor-label">
                                        <input type="file" name="resume" />
                                    </div>
                                    <input type="submit" class="btn btn-primary" value="SUBMIT" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



